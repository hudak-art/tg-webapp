  <title>Новое объявление</title>
  <script src="https://telegram.org/js/telegram-web-app.js"></script>
  <style>
    body {
      font-family: system-ui, sans-serif;
      background: #0f172a;
      color: #fff;
      padding: 16px;
    }
    .card {
      background: #1e293b;
      border-radius: 16px;
      padding: 16px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.6);
      max-width: 480px;
      margin: 0 auto;
    }
    h2 {
      margin-top:0;
      margin-bottom:16px;
      font-size:18px;
      color:#fff;
      font-weight:600;
      line-height:1.3;
    }
    label {
      font-size: 14px;
      opacity: .8;
      display:block;
      margin-bottom:4px;
    }
    input, textarea {
      width: 100%;
      border-radius: 10px;
      border: 0;
      padding: 10px 12px;
      font-size: 15px;
      background:#334155;
      color:#fff;
      outline:none;
      margin-bottom:12px;
    }
    button {
      width: 100%;
      background:#38bdf8;
      color:#000;
      font-weight:600;
      border:0;
      border-radius:12px;
      font-size:16px;
      padding:12px 16px;
    }
    small {
      font-size:12px;
      opacity:.6;
      display:block;
